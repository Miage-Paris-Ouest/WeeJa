<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewFavorite" />

    <TextView
        android:text="Mon Weekend du : "
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textView3"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/imageViewFavorite"
        android:layout_toEndOf="@+id/imageViewFavorite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_below="@+id/textView3"
        android:id="@+id/textViewDateFavorite"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_toRightOf="@+id/imageViewFavorite"
        android:layout_toEndOf="@+id/imageViewFavorite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:id="@+id/textViewDestinationFavorite"
        android:textAlignment="center"
        android:layout_below="@+id/textViewDateFavorite"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewFavorite"
        android:layout_toRightOf="@+id/imageViewFavorite" />
</RelativeLayout>