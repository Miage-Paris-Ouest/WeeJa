<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projet.holo_holo.weeja.controller_view.AccountActivity">

    <TextView
        android:text="Mes Paramètres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewMonCompte"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Nombre d'enfants :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonCelib"
        android:layout_alignLeft="@+id/radioButtonCelib"
        android:layout_alignStart="@+id/radioButtonCelib"
        android:layout_marginTop="65dp"
        android:id="@+id/textViewNbEnfants"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Destination Favorite :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDestination"
        android:textStyle="normal|bold"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textViewBudget"
        android:layout_alignLeft="@+id/textViewBudget"
        android:layout_alignStart="@+id/textViewBudget" />

    <RadioButton
        android:text="En Couple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonCouple"
        android:checked="false"
        android:layout_above="@+id/textViewNbEnfants"
        android:layout_toRightOf="@+id/buttonMesParametres"
        android:layout_toEndOf="@+id/buttonMesParametres" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextBudget"
        android:layout_alignBaseline="@+id/textViewBudget"
        android:layout_alignBottom="@+id/textViewBudget"
        android:layout_alignRight="@+id/editTextDestination"
        android:layout_alignEnd="@+id/editTextDestination"
        android:layout_toEndOf="@+id/textViewMonCompte"
        android:layout_alignLeft="@+id/editTextDestination"
        android:layout_alignStart="@+id/editTextDestination" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextDestination"
        android:layout_alignBaseline="@+id/textViewDestination"
        android:layout_alignBottom="@+id/textViewDestination"
        android:layout_alignRight="@+id/editTextNbEnfants"
        android:layout_alignEnd="@+id/editTextNbEnfants"
        android:layout_alignLeft="@+id/editTextNbEnfants"
        android:layout_alignStart="@+id/editTextNbEnfants" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextNbEnfants"
        android:layout_alignBaseline="@+id/textViewNbEnfants"
        android:layout_alignBottom="@+id/textViewNbEnfants"
        android:layout_alignRight="@+id/radioButtonCouple"
        android:layout_alignEnd="@+id/radioButtonCouple"
        android:layout_toEndOf="@+id/textViewMonCompte"
        android:layout_alignLeft="@+id/radioButtonCouple"
        android:layout_alignStart="@+id/radioButtonCouple" />

    <RadioButton
        android:text="Célibataire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/radioButtonCelib"
        android:checked="false"
        android:duplicateParentState="false"
        android:layout_below="@+id/textViewMonCompte"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Budget : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBudget"
        android:textStyle="normal|bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editTextNbEnfants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sauvegarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMesParametres"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
